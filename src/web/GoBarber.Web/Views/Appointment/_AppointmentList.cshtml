@model List<GoBarber.Web.ViewModels.Appointment.AppointmentViewModel>

<div class="appointments">
    <div class="appointments-list">
        @if (@Model.Count > 0)
        {
            @foreach (var appointment in @Model)
            {
                <div id="@appointment.Id" class="appointment">
                    <div class="appointment-content">
                        <img src="@appointment.User.Avatar" />
                        <div class="appointment-detail">
                            <p>@appointment.User.Name</p>
                            <p>@appointment.Date</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div>No Schedules 😭</div>
        }
    </div>
    <div class="appointment-info" hidden>
        
    </div>
</div>

