@{
    ViewData["Title"] = "Home Page";
    @model GoBarber.Web.ViewModels.User.UserViewModel;
}

<link rel="stylesheet" href="assets/styles/pages/home.css" />

<section class="home">
    <div class="header">
        <div class="header-content">
            <img src="assets/images/logo.svg" />
            <div class="profile">
                <img src="@Model.Avatar != null @Model.Avatar : ''" />
                <div>
                    <span>Olá,</span>
                    @Model.Name
                </div>
            </div>
            <a href="@Url.Action("LogOut","Authentication")">
                <img src="assets/icons/feather/log-out.svg" />
            </a>
        </div>
    </div>

    @await Component.InvokeAsync("AppointmentViewComponent")

    @*<div class="appointments-container">
            <div class="appointments"></div>
        </div>*@
</section>

<script src="assets/scripts/pages/home.js"></script>
